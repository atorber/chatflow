{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules/": true
  }
  , "alignment": {
      "operatorPadding": "right"
    , "indentBase":      "firstline"
    , "surroundSpace":   {
      "colon":      [1, 1],   // The first number specify how much space to add to the left, can be negati  ve. The second number is how much space to the right  , can be negative.
      "assignment": [1, 1],    // The same as above.
      "arrow":      [1, 1],    // The same as above.
      "comment":    2          // Special how much space to add between the trailing comment and the code.
                               // If this value is negative, it means don't align the trailing comment.
    }
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
  "cSpell.words": [
    "Asyncify"
  ],
}
