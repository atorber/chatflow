#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  exec "$basedir/-S" node --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
else 
  exec -S node --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
fi
