{
  "name": "tstest",
  "version": "1.2.8",
  "description": "Testing Utilities for Helping You to Write Better TypeScript Programs",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/src/mod.js",
      "require": "./dist/cjs/src/mod.js"
    }
  },
  "typings": "./dist/esm/src/mod.d.ts",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm-run-all clean build dist:commonjs",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "dist:commonjs": "jq -n \"{ type: \\\"commonjs\\\" }\" > dist/cjs/package.json",
    "lint": "npm-run-all lint:es lint:ts",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test": "cross-env NODE_OPTIONS=\"--no-warnings --loader=ts-node/esm\" tap \"src/**/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huan/tstest.git"
  },
  "keywords": [
    "typescript",
    "testing",
    "test",
    "unit"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huan/tstest/issues"
  },
  "homepage": "https://github.com/huan/tstest#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^1.0.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^4.6.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4"
  },
  "dependencies": {
    "@types/sinon": "^10.0.11",
    "@types/tap": "^15.0.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "sinon": "^13.0.1",
    "tap": "^16.0.0"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "tag": "latest"
  }
}